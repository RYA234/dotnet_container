{
  "family": "dotnet-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::AWS_ACCOUNT_ID:role/ecs-task-execution-role",
  "taskRoleArn": "arn:aws:iam::AWS_ACCOUNT_ID:role/ecs-task-role",
  "containerDefinitions": [
    {
      "name": "web",
      "image": "AWS_ACCOUNT_ID.dkr.ecr.ap-northeast-1.amazonaws.com/dotnet-blazor-app:latest",
      "portMappings": [
        {
          "containerPort": 5000,
          "hostPort": 5000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/dotnet-app",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": []
    }
  ]
}
