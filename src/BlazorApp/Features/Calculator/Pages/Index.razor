@page "/calculator"
@using Microsoft.AspNetCore.Components.Web
@inject BlazorApp.Services.ICalculatorService Calculator

<PageTitle>Calculator</PageTitle>

<h3>Calculator</h3>

<div>
    <input @bind-value="a" @bind-value:event="oninput" type="number" />
    <select @bind="op">
        <option value="+">+</option>
        <option value="-">-</option>
        <option value="*">*</option>
        <option value="/">/</option>
    </select>
    <input @bind-value="b" @bind-value:event="oninput" type="number" />
    <button @onclick="Compute">=</button>
    <strong>@resultText</strong>
</div>

@code {
    private int a;
    private int b;
    private string op = "+";
    private string resultText = string.Empty;

    private void Compute()
    {
        try
        {
            switch (op)
            {
                case "+":
                    resultText = Calculator.Add(a, b).ToString();
                    break;
                case "-":
                    resultText = Calculator.Subtract(a, b).ToString();
                    break;
                case "*":
                    resultText = Calculator.Multiply(a, b).ToString();
                    break;
                case "/":
                    resultText = Calculator.Divide(a, b).ToString();
                    break;
            }
        }
        catch (Exception ex)
        {
            resultText = ex.Message;
        }
    }
}
